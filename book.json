{
  "title": "工作笔记",
  "description": "",
  "author": "Zhenhai Gao",
  "output.name": "site",
  "language": "zh-hans",
  "gitbook": "3.2.3",
  "root": ".",
  "ignores": ["_book","node_modules","style","docs"],
  "plugins": [
    "code",
    "back-to-top-button",
    "-search",
    "-lunr",
    "search-pro",
    "github",
    "splitter",
    "expandable-chapters",
    "tbfed-pagefooter",
    "-sharing",
    "expandable-chapters",
    "chapter-fold",
    "theme-comscore",
    "sharing-plus",
    "prism",
    "pageview-count",
    "emphasize",
    "advanced-emoji",
    "-highlight",
    "styles-less",
    "multipart",
    "ancre-navigation"
  ],
  "pluginsConfig": {
    "github": {
      "url": "https://github.com/gaozhenhai"
    },
    "code": {
      "copyButtons": true
    },
    "tbfed-pagefooter": {
      "copyright": "Copyright © gaozhenhai 2021",
      "modify_label": "本书发布时间：",
      "modify_format": "YYYY-MM-DD HH:mm:ss"
    },
    "sharing": {
      "all": [
        "google",
        "qzone",
        "linkedin"
      ]
    },
    "prism": {
      "css": [
        "prismjs/themes/prism-solarizedlight.css"
      ],
      "lang": {
        "flow": "typescript"
      }
    }
  },
  "page-toc-button": {
    "maxTocDepth": 2,
    "minTocSize": 2
  },
  "styles": {
    "website": "styles/website.css",
    "ebook": "styles/ebook.css",
    "pdf": "styles/pdf.css",
    "mobi": "styles/mobi.css",
    "epub": "styles/epub.css"
  }
}
